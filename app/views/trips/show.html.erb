<p id="notice"><%= notice %></p>

<p>
  <strong>Time:</strong>
  <%= @trip.time.strftime("%l:%M %p") %>
</p>

<p>
  <strong>Date:</strong>
  <%= @trip.date.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Source:</strong>
  <%= @trip.source %>
</p>

<p>
  <strong>Destination:</strong>
  <%= @trip.destination %>
</p>
<% if @trip.user == current_user || current_user.admin? %>
  <td><%= link_to 'Edit', edit_trip_path(@trip) %></td>
<% end %>
| <%= link_to 'Back', trips_path %>
